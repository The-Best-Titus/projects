{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "${workspaceFolder}/build",               
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake Configure"],
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args":[
                "-rf",
                "${workspaceFolder}/build/*"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}